script.
	function slider(){
		var slider = document.getElementById('slider');
		var children = slider.children;
		var sliderWrap = document.querySelector(".stellar__slider__wrap");

		var prevButton = document.getElementById('prev');
		var nextButton = document.getElementById('next');

		prevButton.addEventListener('click', function(){
			nextSlide('prev');
		});
		nextButton.addEventListener('click', function(){
			nextSlide('next');
		});

		function indexOfClass(node) {
			for (var i = 0; i < children.length; i++) {
				if(children[i] === node) {
					return i;
				}
			}
			return -1;
		}

		function nextSlide(direction) {
			var activeSlide = document.querySelector('#slider li.is-active');
			if(direction == "next") {
				var next = indexOfClass(activeSlide) + 1;
			} else {
			 	var next = indexOfClass(activeSlide) - 1;
			}

			if (children[next] == null ) {
				if( direction == "next" ) {
					next = 0;
				} else {
					next = children.length - 1;
				}
			}
			
			activeSlide.classList.remove('is-active');
			children[next].classList.add('is-active');
		}

		var intervals = setInterval(function(){nextSlide('next')}, 3000);

		intervals;

	};

	
	slider();






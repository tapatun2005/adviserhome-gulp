script.

	var newsArray = [];
	var newsNumber = 3;
	var newsDiv = document.querySelector('.axa__news');

	function getNews() {
		
		fetch('https://adviser.axa-im.co.uk/media-centre').then((response) => response.text()).then((text) => {
			var div = document.createElement('div');
			div.innerHTML = text;

			var news = div.querySelectorAll('.news-list-item.gh-news-item');
			
			for (var i = 0; i < newsNumber; i++) {
				
				var date = news[i].querySelector('.news-list__date').innerHTML;
				var link = news[i].querySelector('h3 a');
				var url = link.getAttribute('href');
				var title = link.innerHTML;
				var category = news[i].querySelector('.news-list__category').innerHTML;

				newsArray.push('<div class="_news"><div class="_date">'+ date +' <span> | '+ category +'</span></div><div class="_news-title">'+ title +'</div><div class="_link"><span>Read more</span><img src="/images/axa__arrow.png"></div><a href="'+ url +'" target="_blank"><span>' + title + '</span></a></div>')
			}

			newsDiv.innerHTML = newsArray.join('')
		});

	}

	getNews();